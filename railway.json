{
  "$schema": "https://railway.app/railway.schema.json",
  "_comment": "Auto-deploy configuration for DryJets API on Railway - Deployment ready",
  "build": {
    "buildCommand": "cd apps/api && npm install && npm run prebuild && npm run build"
  },
  "deploy": {
    "startCommand": "cd apps/api && node dist/main.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "watchPaths": [
      "apps/api/**",
      "packages/database/**"
    ],
    "autoDeploy": true,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "source": {
    "repository": "https://github.com/husamdaifalla01-cmyk/DryJets",
    "branch": "Marketing-Engine"
  }
}
