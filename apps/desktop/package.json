{
  "name": "@dryjets/desktop",
  "version": "0.1.0",
  "description": "DryJetsOS Desktop Application",
  "main": "dist/electron/main.js",
  "author": "DryJets",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "cd ../web-merchant && npm run dev",
    "dev:electron": "wait-on http://localhost:3002 && electron .",
    "build": "npm run build:next && npm run build:electron",
    "build:next": "cd ../web-merchant && npm run build && npm run export",
    "build:electron": "tsc electron/main.ts --outDir dist/electron",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "electron": "^38.4.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dryjets.desktop",
    "productName": "DryJetsOS",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "../web-merchant/out/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "dryjets",
      "repo": "dryjets-desktop"
    }
  }
}
