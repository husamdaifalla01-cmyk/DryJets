{
  "extends": "../../packages/config/tsconfig.nest.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../",
    "baseUrl": "./",
    "incremental": true,

    // Type checking - Gradual strict mode migration
    // NOTE: Enabling full strict mode reveals 100+ type errors across API
    // Marketing module DTOs are ready for strict mode, but legacy modules need fixes first
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,

    // Partially enabled for better type safety
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,

    // Path aliases
    "paths": {
      "@/modules/*": ["src/modules/*"],
      "@/common/*": ["src/common/*"],
      "@/config/*": ["src/config/*"],
      "@dryjets/database": ["../../packages/database/index.ts"],
      "@dryjets/types": ["../../packages/types/index.ts"],
      "@dryjets/types/marketing": ["../../packages/types/src/marketing/index.ts"]
    }
  },
  "include": [
    "src",
    "../../packages/database",
    "../../packages/types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
