{
  "name": "dryjets-platform",
  "version": "1.0.0",
  "private": true,
  "description": "DryJets - Comprehensive Dry Cleaning & Laundry Marketplace Platform",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "services/*",
      "apps/web-platform"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-*",
      "**/react-native-*/**",
      "**/expo",
      "**/expo/**",
      "**/expo-*",
      "**/expo-*/**",
      "**/@react-native/**",
      "**/@expo/**",
      "**/react-native-maps",
      "**/react-native-maps/**",
      "**/@stripe/stripe-react-native",
      "**/@stripe/stripe-react-native/**",
      "**/react-native-reanimated",
      "**/react-native-reanimated/**",
      "**/react-native-gesture-handler",
      "**/react-native-gesture-handler/**",
      "**/react-native-worklets",
      "**/react-native-worklets/**"
    ]
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "type-check": "turbo run type-check",
    "validate:architecture": "tsx scripts/validate-architecture.ts"
  },
  "devDependencies": {
    "@turbo/gen": "^2.0.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.0",
    "prettier": "^3.3.0",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.1",
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "bullmq": "^5.61.2",
    "googleapis": "^164.1.0",
    "ioredis": "^5.8.2",
    "pnpm": "^10.20.0"
  }
}
