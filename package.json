{
  "name": "dryjets-platform",
  "version": "1.0.0",
  "private": true,
  "description": "DryJets - Comprehensive Dry Cleaning & Laundry Marketplace Platform",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "services/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**",
      "**/expo-*",
      "**/expo-*/**",
      "**/@react-native/**",
      "**/@expo/**"
    ]
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@turbo/gen": "^2.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.1",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-tabs": "^1.1.13"
  }
}
