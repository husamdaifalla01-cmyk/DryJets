# Production Environment Variables for Railway Deployment

# Application
NODE_ENV=production
PORT=3004

# Database (PostgreSQL on Railway)
DATABASE_URL=postgresql://username:password@host:port/database

# Elasticsearch (Elastic Cloud)
ELASTICSEARCH_URL=https://my-elasticsearch-project-ebc6a6.es.us-central1.gcp.elastic.cloud:443
ELASTICSEARCH_API_KEY=your_elasticsearch_api_key_here

# API Configuration
NEXT_PUBLIC_API_URL=https://dryjets-production.up.railway.app
API_URL=https://dryjets-production.up.railway.app

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRATION=7d

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid Email
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@dryjets.com

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase (Optional)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# OpenAI / Anthropic AI
OPENAI_API_KEY=sk-your_openai_key
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# Redis (for queues and caching)
REDIS_URL=redis://default:password@host:port

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dryjets-production

# Google Cloud (for Google Maps, etc.)
GOOGLE_MAPS_API_KEY=your_google_maps_key
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_secret

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true

# Monitoring & Logging
SENTRY_DSN=https://your_sentry_dsn
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=https://dryjets.com,https://app.dryjets.com
